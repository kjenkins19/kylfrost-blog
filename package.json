{
  "name": "kylfrost-blog",
  "version": "1.0.0",
  "description": "A responsive static blog website built with React, TailwindCSS, MDX, and esbuild",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --dev &",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "eslint src/**/*.{js,jsx}",
    "lint:css": "stylelint src/**/*.css"
  },
  "keywords": [
    "blog",
    "react",
    "tailwindcss",
    "mdx",
    "esbuild",
    "static-site"
  ],
  "author": "Kyle Jenkins",
  "license": "MIT",
  "devDependencies": {
    "@mdx-js/esbuild": "^3.1.1",
    "@mdx-js/mdx": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.0",
    "chokidar": "^3.5.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.3.0"
  },
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "mermaid": "^11.12.1",
    "prismjs": "^1.30.0"
  }
}
